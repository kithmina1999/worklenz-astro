---
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";

import "@fontsource-variable/inter/index.css";

export interface Props {
  title?: string;
  footerMargin?: boolean;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title, footerMargin = true } = Astro.props;

const makeTitle = title
  ? title + " | " + "Worklenz"
  : "Worklenz - Free and Open Source Agency Management Tool";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/wl-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="Experience the efficiency and effectiveness of our advanced project management platform and never look back."
      canonical={canonicalURL}
      twitter={{
        card: "summary_large_image",
        description: "Experience the efficiency and effectiveness of our advanced project management platform and never look back.",
        title: `Worklenz - Free and Open Source Agency Management Tool`,
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Worklenz - Free and Open Source Agency Management Tool`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Worklenz Homepage Screenshot",
        },
      }}
    />
    <script
      charset="utf-8"
      type="text/javascript"
      src="//js.hsforms.net/forms/embed/v2.js"></script>
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "dx77073klh");
    </script>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <ViewTransitions />
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer margin={footerMargin} />
  </body>
</html>

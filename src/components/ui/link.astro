---
interface Props {
  href: string;
  size?: "md" | "lg" | "sm" | "xs";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-7 py-2.5",
  md: "px-5 py-2",
  sm: "px-4 py-2 text-sm",
  xs: "px-3 py-1.5 text-xs",
};

const styles = {
  outline: "bg-white border-2 border-blue-500 hover:bg-blue-50 text-blue-600 ",
  primary: "bg-blue-600 text-white hover:bg-blue-800",
  inverted: "bg-white text-blue-800 border-2 border-transparent",
  muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-full text-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-blue-500 focus-visible:outline-none focus-visible:shadow-outline-blue",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>

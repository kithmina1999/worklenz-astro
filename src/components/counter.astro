---
import Container from "@components/container.astro";
---

<div class="overflow-x-clip">
  <Container>
    <section class="bg-white py-12">
        <div class="container mx-auto px-4">
          <div class="flex justify-around text-center">
            <div>
              <h2 class="text-4xl font-bold text-gray-800 counter" data-end="300">+0</h2>
              <p class="text-gray-600">Collaborative Teams</p>
            </div>
            <div>
              <h2 class="text-4xl font-bold text-gray-800 counter" data-end="2000">+0</h2>
              <p class="text-gray-600">Active Projects</p>
            </div>
            <div>
              <h2 class="text-4xl font-bold text-gray-800 counter" data-end="40000">+0</h2>
              <p class="text-gray-600">Tasks Accomplished</p>
            </div>
          </div>
        </div>
        <script is:inline src="/counter.js"></script>
      </section>
  </Container>
</div>

---
import { Picture } from "astro:assets";
import Nanosoft from "@assets/patners/nanosoft.png";
import GUI from "@assets/patners/gui.png";
import Kainovation from "@assets/patners/kainovation.png";
import Incrementl from "@assets/patners/incrementl.png";
import Paymedia from "@assets/patners/paymedia-1.png";
import Softcricket from "@assets/patners/softcricket.png";
import FoundersNetwork from "@assets/patners/Logo-LFN-High-Resolution.png";
import {
  getLangFromUrl,
  useTranslations,
} from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div>
  <h2 class="text-center text-slate-500">{t("logos.heading")}</h2>
  <div
    class="flex gap-x-8 gap-y-4 md:gap-10 lg:gap-20 items-center justify-center mt-6 flex-wrap">
    <div>
        <Picture src={Nanosoft} alt={t("logos.imgAlt")} loading="lazy" width={120} />
    </div>

    <div>
        <Picture src={GUI} alt="gui" loading="lazy" width={80} height={80} />
    </div>
    <div>
        <Picture src={Kainovation} alt="gui" loading="lazy" width={80} />
    </div>
    <div>
        <Picture src={Incrementl} alt="gui" loading="lazy" width={120} />
    </div>

    <div>
        <Picture src={Paymedia} alt="gui" loading="lazy" width={120} />
    </div>

    <div>
        <Picture src={Softcricket} alt="gui" loading="lazy" width={120} />
    </div>

    <div>
        <Picture src={FoundersNetwork} alt="gui" loading="lazy" width={80} />
    </div>
  </div>
</div>

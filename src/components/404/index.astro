---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-20rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1
          class="text-6xl lg:text-9xl font-bold lg:tracking-tight bg-gradient-to-b from-blue-600 to-blue-300 bg-clip-text text-transparent">
          404
        </h1>
        <p class="text-lg lg:text-2xl font-medium mt-4 text-slate-700">
          {t('404.body.info')}
        </p>
        <div class="mt-10">
          <Link href={translatePath('/')} style="outline">{t('404.body.link-text')}</Link>
        </div>
      </div>
    </div>
  </Container>
</Layout>

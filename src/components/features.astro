---
// @ts-ignore
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Task List",
    description:
      "Organize and manage tasks effortlessly with the task list feature, allowing users to create, prioritize, and track tasks, boosting productivity and streamlining workflows.",
    icon: "fluent:clipboard-task-24-regular",
  },
  {
    title: "Kanban",
    description:
      "The Kanban board visually organizes tasks by workflow stages, helping users track progress, prioritize tasks, and manage work flexibly, enhancing collaboration and efficiency.",
    icon: "fluent:board-24-regular",
  },
  {
    title: "Dashboard Insights",
    description:
      "Dashboard insights offer a clear overview of key metrics and performance indicators, empowering users to track progress, identify trends, and make informed, data-driven decisions.",
    icon: "fluent:preview-link-24-regular",
  },
  {
    title: "File Management",
    description:
      "Easily organize, store, and share files within the platform, ensuring seamless collaboration, efficient version control, and quick access to important documents for improved team productivity.",
    icon: "fluent:document-add-24-regular",
  },
  {
    title: "Daily Digest",
    description:
      "Subscribe to Worklenz for timely updates, keeping you informed about new features, developments, and announcements. Stay updated, optimize your experience, and boost productivity with regular insights.",
    icon: "fluent:mail-alert-24-regular",
  },
  {
    title: "Notify When Done",
    description:
      "The “Notify When Done” feature lets team members alert others once a task is completed, ensuring real-time updates and seamless communication for better collaboration.",
    icon: "fluent:alert-urgent-24-regular",
  },
];
---

<div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    Got everything covered for you
  </h2>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8 md:gap-16">
  {
    features.map((item) => (
      <div class="flex flex-col gap-4 items-start group hover:bg-slate-50 hover:border-slate-100 border border-transparent rounded-lg transition-all md:-m-5 p-5">
        <div class="mt-1 bg-blue-50 border shadow shadow-blue-100/50 border-blue-100 transition-colors rounded-lg grid place-items-center  p-2 w-10 h-10 shrink-0">
          <Icon class="text-blue-500" name={item.icon} size={24} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
